{
  "manifest_version": 3,
  "name": "URL Change UI Stub",
  "version": "0.1.0",
  "description": "Stubs UI changes whenever a tab URL changes, including SPA navigations.",
  "permissions": [
    "tabs",
    "webNavigation",
    "storage",
    "scripting"
  ],
  "optional_host_permissions": ["<all_urls>"],

  "background": {
    "scripts": ["background.js"],
    "type": "module"
  },

  "sidebar_action": {
    "default_title": "URL Change Counters",
    "default_panel": "sidebar.html"
  }
}
